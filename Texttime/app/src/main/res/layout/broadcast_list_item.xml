<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/main_broadcast"
        android:orientation="vertical">
        <CustomViews.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileImage"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/like_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nolike_home_page"/>
        <CustomViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_count"
            android:text="7.3K"
            android:textColor="@color/heading_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/historyLayout"
        android:layout_toRightOf="@id/profileImage"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <CustomViews.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:textSize="18dp"
                android:text="Kenny"
                android:layout_centerVertical="true"
                android:textColor="@color/heading_color" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_back_down"
                android:id="@+id/show_history" />

            <CustomViews.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postedTime"
                android:text="3 Days"
                android:textColor="#A5A5A5"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/show_history"
                android:layout_toStartOf="@+id/show_history" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/locationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/location_icon" />
            <CustomViews.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_address"
                android:layout_centerVertical="true"
                android:text="25 vijay nager"
                android:textColor="#A3A3A3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/post_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/shared_section">
                <CustomViews.CustomImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/share_person_img"
                    android:layout_alignParentTop="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CustomViews.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/share_person_name"
                        android:text="Gabriel"
                        android:textSize="16dp"
                        android:textColor="@color/heading_second" />
                    <CustomViews.CustomTextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sharePostedTime"
                        android:text="4 Days"
                        android:textColor="@color/heading_second" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/share_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_ic"/>
                <CustomViews.CustomTextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/share_count"
                    android:textColor="#A2A2A2"
                    android:text="67"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/medialayout" >
                <CustomViews.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textMessage"
                    android:textSize="16dp"
                    android:visibility="visible"
                    android:text="I am working on top bar interactions screen today, it's fairly time consuming task so I won't be able to provide build today as well will send build close to lunch time tomorrow with chat screen with top bar interactions completed."
                    android:textColor="#000000"/>

                <CustomViews.CustomMediaImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/media_image"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_play_white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:id="@+id/mediaPlay"/>

                <CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/read_more"
                    android:visibility="visible"
                    android:text="@string/read_more"
                    android:textColor="@color/heading_color"
                    android:layout_below="@id/textMessage"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/features">
                <CustomViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/leave_comment"
                    android:text="@string/leave_comment"
                    android:textColor="@color/heading_second" />

                <ImageView
                    android:id="@+id/comment_history"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/comment_home_page" />
                <CustomViews.CustomTextViewLight
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_count"
                    android:text="34 Comments"
                    android:includeFontPadding="false"
                    android:textColor="#A5A5A5"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/go_comment_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_forword"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>