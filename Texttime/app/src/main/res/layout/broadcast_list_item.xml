<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CustomViews.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileImage"
        android:src="@mipmap/placeholder"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/historyLayout"
        android:layout_toRightOf="@id/profileImage"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <CustomViews.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:text="Gabriel Pairs"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <CustomViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postedTime"
            android:text="29 mins"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <CustomViews.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMessage"
            android:textSize="16dp"
            android:text="Alpha bravo charlie delta echo foxtrot golf hotel india juliet kilo lima"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>