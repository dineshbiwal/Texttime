<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/settingsIcon"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:background="@mipmap/chat_settings"
    />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:background="@mipmap/seach_new"
        android:layout_toRightOf="@id/settingsIcon"
        />



    <CustomViews.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatlabel"
        android:textColor="#000000"
        android:includeFontPadding="false"

        android:layout_centerVertical="true"
        android:textSize="22dp"
        android:text="Chat"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/searchIcon"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createNewChatIcon"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@mipmap/compose_new"
       android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:id="@+id/onlinestatus"
        android:background="@drawable/circle_green"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/chatlabel"
        />

</RelativeLayout>