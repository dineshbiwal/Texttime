<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/bottomTabBar"
        android:background="@mipmap/bg_tab"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/chatTab"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatIcon"
                android:layout_centerInParent="true" />
            <CustomViews.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatText"
                android:layout_toRightOf="@id/chatIcon"
                android:textColor="@color/text_tab"
                android:text="111"
                android:textSize="10dp"
                android:singleLine="true"
                android:paddingRight="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/groupTab"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/groupIcon"
                android:layout_centerInParent="true" />
            <CustomViews.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/groupText"
                android:layout_toRightOf="@id/groupIcon"
                android:textColor="@color/text_tab"
                android:text="111"
                android:textSize="10dp"
                android:singleLine="true"
                android:paddingRight="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/composeTab"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cameraPreview"
                android:layout_centerInParent="true">
                <CustomViews.CameraModule.CustomCameraView
                    android:id="@+id/customCameraView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/broadcastTab"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/broadCastIcon"
                android:layout_centerInParent="true" />
            <CustomViews.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boadcastText"
                android:layout_toRightOf="@id/broadCastIcon"
                android:textColor="@color/text_tab"
                android:singleLine="true"
                android:text="111"
                android:textSize="10dp"
                android:paddingRight="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/myProfileTab"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myProfileIcon"
                android:layout_centerInParent="true" />
            <CustomViews.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/requestText"
                android:layout_toRightOf="@id/myProfileIcon"
                android:textColor="@color/text_tab"
                android:text="1"
                android:singleLine="true"
                android:textSize="10dp"
                android:paddingRight="2dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>