<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deleteMenuContainer"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedUsersImageLayout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedUsersNameLayout"
        android:layout_below="@id/selectedUsersImageLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >

        <CustomViews.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:text="Paula"
            />
        </LinearLayout>

    <CustomViews.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:alpha="0.7"
        android:text="cancel"

        android:textSize="16dp"
        android:id="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedUsersNameLayout"
        android:layout_above="@id/cancelButton"
        android:orientation="vertical"
        android:id="@+id/optionsLayout"
        >

        <CustomViews.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/deleteChatButton"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="delete chat"
            android:alpha="0.7"
            android:includeFontPadding="false"
            />


        <CustomViews.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/archiveChatButton"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="archive instead"
            android:alpha="0.7"
            android:layout_weight="1"
            android:includeFontPadding="false"
            />

        <CustomViews.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/clearChatButton"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="clear history"
            android:alpha="0.7"
            android:includeFontPadding="false"
            />

    </LinearLayout>

</RelativeLayout>