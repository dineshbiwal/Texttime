<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:background="@mipmap/back_button"
    android:id="@+id/backButton"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/mute"
        android:id="@+id/muteButton"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/archiveButton"
        android:layout_toLeftOf="@id/muteButton"
        android:layout_marginRight="15dp"
        android:background="@mipmap/archive"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/deleteButton"
        android:layout_toLeftOf="@id/archiveButton"
        android:layout_marginRight="15dp"
        android:background="@mipmap/delete"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textback"
        android:textColor="@android:color/white"
        android:id="@+id/numberofSelection"
        android:gravity="center"
        android:layout_toLeftOf="@id/deleteButton"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"

        />

</RelativeLayout>