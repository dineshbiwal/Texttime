<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/comment_part">
        <CustomViews.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commented_user_profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <CustomViews.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/commented_user_name"
                    android:textSize="18dp"/>

                <CustomViews.CustomTextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commented_time"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp"
                    android:text="Today 11:37 AM"
                    android:textColor="@android:color/black"
                    android:alpha="0.25"/>

            </RelativeLayout>
            <CustomViews.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commented_text"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:alpha="0.5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>