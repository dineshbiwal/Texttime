<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CustomViews.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commented_user_profile"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CustomViews.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commented_user_name"
                android:textSize="18dp"/>
            <CustomViews.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commented_time"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:textSize="12dp"/>
        </LinearLayout>
        <CustomViews.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commented_text"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>