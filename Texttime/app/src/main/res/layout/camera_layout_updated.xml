<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#333333"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextureView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraPreviewDisplay"
        />
    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/donut_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        custom:donut_progress="10"
        custom:donut_background_color="#77ffffff"
        custom:donut_finished_color="@color/red"
        custom:donut_unfinished_color="@android:color/white"
        custom:donut_finished_stroke_width="5dp"
        custom:donut_unfinished_stroke_width="5dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchCamera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@mipmap/flip"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchFlashMode"
        android:layout_marginTop="15dp"
        android:background="@mipmap/flash_off"
        android:layout_marginLeft="15dp"
        />



</RelativeLayout>